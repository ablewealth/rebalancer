# Tax Harvesting Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=8742

# Database Configuration (Choose one)

# Option 1: Neon Database (Recommended for production)
# Get your connection string from Neon dashboard
# DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# Option 2: Local PostgreSQL (for development)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tax_harvesting
DB_USER=postgres
DB_PASSWORD=your_password_here

# Neon Specific Configuration
# Get these from your Neon project dashboard
# NEON_PROJECT_ID=your-project-id
# NEON_API_KEY=your-api-key

# Application Configuration
MAX_PORTFOLIO_SIZE=1000
MAX_CALCULATION_HISTORY=100
CACHE_TTL_SECONDS=300
CORS_ORIGIN=http://localhost:3001

# Security Configuration
JWT_SECRET=your-jwt-secret-here
API_RATE_LIMIT=100

# Feature Flags
ENABLE_REAL_TIME_PRICES=false
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_WASH_SALE_DETECTION=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# External API Configuration (Optional)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
FINNHUB_API_KEY=your_finnhub_api_key_here
POLYGON_API_KEY=your_polygon_api_key_here
# IEX_CLOUD_API_KEY=your-api-key